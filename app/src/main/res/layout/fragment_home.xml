<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for numeric statistics -->
    <LinearLayout
        android:id="@+id/statisticsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="#f0f0f0">

        <TextView
            android:id="@+id/totalUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Users: 0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/activeSessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Sessions: 0"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Add more TextViews for additional statistics -->
    </LinearLayout>

    <!-- Chart for visual statistics -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/statisticsChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/statisticsContainer"
        android:layout_margin="16dp" />

</RelativeLayout>
