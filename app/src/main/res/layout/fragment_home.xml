<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />
<!--        android:contentDescription="@string/landing_image_desc" />-->
<!--    android:src="@drawable/landing_image"-->
    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_below="@id/headerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Welocme"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Statistics Section -->
    <LinearLayout
        android:id="@+id/statisticsSection"
        android:layout_below="@id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="20dp"
       >

<!--        android:background="@drawable/rounded_corner_background"-->
        <!-- Statistic 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/stat1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Student"
                android:textSize="18sp"
                android:textColor="@color/purple_200"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Statistic 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/stat2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScheduleCount"
                android:textSize="18sp"
                android:textColor="@color/purple_200"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat2Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Statistic 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/stat3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Schedule"
                android:textSize="18sp"
                android:textColor="@color/purple_200"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat3Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="789"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Get Started Button -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_below="@id/statisticsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="TRIAL"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

</RelativeLayout>
